@model Caritas.Models.Content
@{
    ViewBag.Title = "Contact Us";
}
<div class="container">
    <h3>Contact <span style="color:#D0040f">Caritas University</span></h3>
    <hr />
    <div class="col-md-8">
        <form class="frm" method="post">
            <div class="form-group">
                <label class="control-label">Name</label>
                <input name="Name" type="text" class="form-control" placeholder="Full Name" ng-model="name"  />
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input name="Email" type="text" class="form-control" placeholder="Valid Email" ng-model="email" />
            </div>
            <div class="form-group">
                <label class="control-label">Phone</label>
                <input name="Phone" type="text" class="form-control" placeholder="Valid Phone Number" ng-model="phone" />
            </div>
            <div class="form-group">
                <label class="control-label">Message</label>
                <textarea name="Message" class="form-control" rows="5" ng-model="msg" required></textarea>
                <span ng-show="frm.msg.$dirty && frm.msg.$error.required">Message is required</span>
            </div>
            <div class="btn-group pull-right">
                <button class="btn btn-success" type="submit">Submit</button>
                <a href="/" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="panel panel-danger">
            <div class="panel-body">
                @Html.Raw(Model.Content1)
            </div>
        </div>
    </div>
</div>
<script>
    $("#ContactLink").addClass("active");
</script>