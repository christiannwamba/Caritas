@{ViewBag.IPAddress = Request.ServerVariables["REMOTE_ADDR"].ToString();}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Caritas University</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/css/metro-bootstrap.css" rel="stylesheet" />

    
    <link rel="shortcut icon" type="image/png" href="~/Images/favicon.fw.png">

    <link href="~/Content/fuelux.css" rel="stylesheet" />
    <link href="~/Scripts/jqueryFileTree.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    @*Angular*@
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/js/metro.min.js"></script>
    <script src="~/Scripts/jquery.easing.js"></script>
    <script src="~/Scripts/jqueryFileTree.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/angular-file-upload-shim.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <link href="~/Content/loading-bar.css" rel="stylesheet" />
    <script src="~/Scripts/loading-bar.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-0.11.0.js"></script>
    <script src="~/Scripts/angular-file-upload.js"></script>
    <script src="~/Scripts/angular-sanitize.js"></script>
    <script src="~/Scripts/ui-utils.js"></script>
    <script src="~/Scripts/calendar.js"></script>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/tinymce.js"></script>

    <script src="http://bazalt-cms.com/assets/ng-table/0.3.0/ng-table.js"></script>
    <link rel="stylesheet" href="http://bazalt-cms.com/assets/ng-table/0.3.0/ng-table.css" />

    @*End Angular*@
    <script src="~/Controllers/AdminApp.js"></script>
</head>
<body>
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=880767911941257&version=v2.0";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <div class="navbar navbar-default navbar-fixed-top" style="height:10px; padding-top:0; line-height:0; min-height:0; margin-bottom:0"></div>
    <div style="background-color: #772953; background: url('/Images/dark-logo-bg.png');">
        <div class="container" style="padding-bottom:10px">
            <div class="container">
                <div class="col-md-3" style="padding:0">
                    <span class="pull-left" style="font-size: 5em;"><img src="~/Images/caritas-logo.png" /></span>
                </div>
            </div>
        </div>
    </div>
    <div class="navbar navbar-default" style="border-radius:0">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<a class="navbar-brand" href="/">
                        <span class="glyphicon glyphicon-leaf" style="font-size:1.2em"></span>
                    </a>*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="HomeLink"><a href="~/Home"><span class="glyphicon glyphicon-home"></span></a></li>
                    <li id="AboutLink"><a href="~/Content/About">About</a></li>
                    <li id="AdmissionLink"><a href="~/Content/Admission">Admission</a></li>
                    <li id="PubsLink"><a href="~/Publication">Publication</a></li>
                    <li id="CoursesLink"><a href="~/Courses">Courses</a></li>
                    <li id="ContactLink"><a href="~/Contact"><span class="glyphicon glyphicon-envelope"></span>&nbsp;Contact Us</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="body-content">
        <div style="min-height:500px">
            @RenderBody()
        </div>
        <hr />

        <footer style="background-color: #772953; background: url('/Images/dark-logo-bg.png'); color: white; clear: both; height: 5em">
            <div class="container">
                @{
                    var twoYearsAgo = DateTime.Now.Year - 2;
                }
                <br />
                <p class="text-center">
                    Copyrights &copy; @twoYearsAgo - @DateTime.Now.Year | Caritas University, Amorji-Nike Enugu.
                    <br />
                    All rights reserved
                </p>


                <span style="position:fixed; bottom:1px; right:1px;">
                    Powered by Computer Engineering 2010 Set.
                </span>
            </div>
        </footer>

    </div>



    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/fuelux/js/fuelux.js"></script>
    @RenderSection("scripts", required: false)
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-markdown/2.7.0/js/bootstrap-markdown.js"></script>
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.2/js/bootstrap-select.js"></script>
</body>
</html>
