@{
    ViewBag.Title = "Manage Contents";
}

<div class="container" ng-app="AdminApp" ng-controller="ContentsCtrl">
    <a href="~/Admin"><span style="font-size:40px" class="glyphicon glyphicon-arrow-left"></span></a>
    <h3>Manage Contents</h3>
    <hr />
    <div class="col-md-8">
        <form name="frm">            
            <div class="form-group">
                <label class="control-label">Type</label>
                <select class="form-control" ng-model="contentType" ng-change="getContentForUpdate(contentType)">
                    <option value="">Select Content Type</option>
                    <option value="Welcome">Welcome</option>
                    <option value="About">About</option>
                    <option value="Admission">Admission</option>
                    <option value="Contact Us">Contact Us</option>
                    <option value="Entry Requirements">Entry Requirements</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Content</label>
                <textarea name="content" class="form-control" ui-tinymce="tinymceOptions" ng-model="content" required></textarea>
                <span ng-show="frm.content.$dirty && frm.content.$error.required">Content is required</span>
            </div>
            <div class="form-group pull-right">
                <button class="btn btn-primary" ng-click="updateContent()">Update</button>
            </div>
        </form>
    </div>
</div>
