@model Caritas.ViewModel.HomeViewModel
@{
    ViewBag.Title = "Manage Projects";
}

<div class="container" ng-app="AdminApp" ng-controller="ProjectsCtrl">
    <h3>Manage Projects</h3>
    <hr />
    <h3 class="text-primary">Total Downloads: @ViewBag.TotalDowns</h3>
    
        <div class="col-md-6">
                <script>
                    function openCustomRoxy() {
                        $('#roxyCustomPanel').dialog({ modal: true, width: 875, height: 600 });
                    }
                    function closeCustomRoxy() {
                        $('#roxyCustomPanel').dialog('close');
                    }
                </script>
                <a href="javascript:openCustomRoxy()"><button type="button" class="btn btn-primary">Upload</button></a>
                <div id="roxyCustomPanel" style="display: none;">
                    <iframe src="/fileman/index.html?integration=custom" style="width:100%;height:100%" frameborder="0"></iframe>
                </div>
        </div>
    <div class="col-md-6">
        
        <div class="table-responsive">
            
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>File</td>
                        <td>Count</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.Downloads) { 
                    <tr>
                        <td>@d.File</td>
                        <td>@d.Count</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




